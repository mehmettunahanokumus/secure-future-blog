---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="fade-in">
			<div class="blog-header">
				<h1 class="section-path">~/blog/documentations</h1>
				<p class="header-desc">Technical insights, security research, and digital exploration.</p>
			</div>
			
			<section class="posts-list">
				{
					posts.map((post) => (
						<a href={`/blog/${post.id}/`} class="blog-entry">
							<div class="entry-meta">
								<span class="entry-icon">ðŸ“‚</span>
								<FormattedDate date={post.data.pubDate} />
							</div>
							<div class="entry-content">
								<h2 class="entry-title">{post.data.title}</h2>
								<p class="entry-desc">{post.data.description}</p>
							</div>
							<span class="read-more">read_more â†—</span>
						</a>
					))
				}
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.blog-header {
		margin-bottom: 4rem;
	}
	
	.section-path {
		font-size: 1.5rem;
		color: var(--text-primary);
		margin-bottom: 0.5rem;
		font-weight: 700;
	}

	.header-desc {
		color: var(--text-tertiary);
		font-size: 1rem;
	}
	
	.posts-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	
	.blog-entry {
		display: grid;
		grid-template-columns: 200px 1fr auto;
		gap: 2rem;
		align-items: center;
		padding: 2rem;
		border: 1px solid var(--border);
		border-radius: var(--radius-lg);
		background: var(--background-secondary);
		text-decoration: none;
		transition: var(--transition);
	}
	
	.blog-entry:hover {
		border-color: var(--accent);
		transform: translateX(5px);
		box-shadow: var(--shadow-md);
	}
	
	.entry-meta {
		font-size: 0.9rem;
		color: var(--text-tertiary);
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}
	
	.entry-icon {
		font-size: 1.2rem;
	}
	
	.entry-title {
		font-size: 1.25rem;
		color: var(--text-primary);
		margin: 0 0 0.5rem 0;
		font-weight: 600;
	}
	
	.entry-desc {
		font-size: 0.95rem;
		color: var(--text-secondary);
		margin: 0;
		line-height: 1.5;
	}
	
	.read-more {
		font-size: 0.85rem;
		color: var(--accent);
		white-space: nowrap;
	}
	
	@media (max-width: 768px) {
		.blog-entry {
			grid-template-columns: 1fr;
			gap: 1rem;
			padding: 1.5rem;
		}
		
		.entry-meta {
			margin-bottom: 0.5rem;
		}

		.read-more {
			display: none;
		}
	}
</style>
